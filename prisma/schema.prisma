datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Pidana {
  id                  Int                @id @default(autoincrement())
  nomorPerkara        String
  jaksaPenuntutUmum   String
  terdakwa            String
  keterangan          String?
  ruangSidang         String?
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt
  ketuaMajelisId      Int
  paniteraPenggantiId Int
  ketuaMajelis        KetuaMajelis       @relation(fields: [ketuaMajelisId], references: [id])
  paniteraPengganti   PaniteraPengganti  @relation(fields: [paniteraPenggantiId], references: [id])
}

model KetuaMajelis {
  id        Int @id @default(autoincrement())
  name      String
  pidana    Pidana[]
}

model PaniteraPengganti {
  id        Int @id @default(autoincrement())
  name      String
  pidana    Pidana[]
}